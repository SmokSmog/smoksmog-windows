<Page x:Class="SmokSmog.Views.SettingsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="using:SmokSmog.Views"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d">

    <Grid Background="{StaticResource SmokSmogPageBackgroundBrush}">

        <StackPanel>

            <ToggleSwitch Toggled="ToggleSwitch_OnToggled">Show home station statuses on Primary Live Tile</ToggleSwitch>

            <ToggleSwitch>Allow using Localization</ToggleSwitch>

        </StackPanel>
    </Grid>
</Page>